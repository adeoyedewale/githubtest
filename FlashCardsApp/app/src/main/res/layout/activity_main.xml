<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patentId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:contextClickable="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:gravity="center"
        android:text="Who is the 44th President of the United States?"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="200dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:text="Barrack Obama"
        android:textColor="#000000"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvAnswer1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="#f6b26b"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvAnswer2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tvAnswer1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="#f6b26b"
        android:gravity="center"
        android:text="George H. W. Bush"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvAnswer3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tvAnswer2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="#f6b26b"
        android:gravity="center"
        android:text="Barack Obama"
        android:textSize="40sp" />
</RelativeLayout>